<UserControl x:Class="WpfDemosCommonCode.CustomControls.FontFamilySelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="23" Width="175">
    <Grid>
        <ComboBox Name="fontFamilyComboBox" MaxDropDownHeight="300">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                        <TextBlock Text="{Binding}" FontFamily="{Binding}" Margin="0,2,0,0"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </Grid>
</UserControl>
