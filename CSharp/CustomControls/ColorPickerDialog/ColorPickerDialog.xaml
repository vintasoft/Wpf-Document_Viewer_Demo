<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="WpfDemosCommonCode.CustomControls.ColorPickerDialog"
    xmlns:CustomControls="clr-namespace:WpfDemosCommonCode.CustomControls"
    Title="Select a Color"
    Width="600" MinWidth="300"
    Height="420" MinHeight="400">

    <Grid Margin="10,10,10,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="29"/>
        </Grid.RowDefinitions>

        <CustomControls:ColorPicker x:Name="cPicker" Grid.Row="0"/>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Name="OKButton"
                    Click="okButtonClicked"
                    IsEnabled="True"
                    Height="23"
                    Width="75">OK</Button>
            <Button Height="23"
                    Width="75"
                    Margin="3,0"
                    Click="cancelButtonClicked">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
